<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="product"
            type="com.example.appsale30112021.data.remote.response.ProductResponse" />
    </data>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp"
        app:cardElevation="5dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewImage"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:elevation="5dp"
                app:layout_constraintDimensionRatio="614:384"
                android:layout_width="170dp"
                android:layout_height="0dp">
                <ImageView
                    img="@{product.img}"
                    android:adjustViewBounds="true"
                    android:id="@+id/imageView"
                    android:src="@drawable/image_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:textColor="#f20"
                android:id="@+id/textViewName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/textViewAddress"
                app:layout_constraintLeft_toRightOf="@id/cardViewImage"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="16sp"
                android:text="@{product.name}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:textColor="#8A8A8A"
                android:id="@+id/textViewAddress"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewName"
                app:layout_constraintBottom_toTopOf="@id/textViewPrice"
                app:layout_constraintLeft_toRightOf="@id/cardViewImage"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="13sp"
                android:text="@{product.address}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:textStyle="italic"
                android:textColor="#040404"
                android:id="@+id/textViewPrice"
                app:layout_constraintTop_toBottomOf="@id/textViewAddress"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/buttonAddCart"
                app:layout_constraintLeft_toRightOf="@id/cardViewImage"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="12sp"
                price="@{product.price}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAddCart"
                app:layout_constraintTop_toBottomOf="@id/textViewPrice"
                app:layout_constraintLeft_toRightOf="@id/cardViewImage"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_button_conner"
                android:elevation="5dp"
                android:text="Add to cart"
                android:textAllCaps="false"
                android:textColor="#ffff"
                android:textSize="15sp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>